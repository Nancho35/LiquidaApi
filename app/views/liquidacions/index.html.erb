<p id="notice"><%= notice %></p>

<h1>Historico liquidaciones</h1>
<%= link_to image_tag("xls.png"), liquidacions_path(format: "xls") %>
<%= link_to 'XLS ', liquidacions_path(format: "xls") %>|

<%= link_to image_tag("csv.png"), liquidacions_path(format: "csv") %>
<%= link_to 'CSV ', liquidacions_path(format: "csv") %>

<table class="table table-striped table-bordered table-hover table-sm ">
  <thead> 
    <tr>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Cargo</th>
      <th>Contrato</th>
      <th>Termina</th>
      <th>Salario</th>
      <th>Sueldo promedio</th>
      <th>Vacaciones</th>
      <th>Indemniza Art65</th>
      <th>Indemniza Art64</th>
      <th>Cesantias</th>
      <th>Inte cesantias</th>
      <th>Prima</th>
      <th>Total prestaciones</th>
      <th>Total</th>
      <th>Nombres</th>
      <th>Correo</th>
      <th>Fecha Creación</th>

      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @liquidacions.each do |liquidacion| %>
      <tr>
        <td><%= liquidacion.fecha_ini %></td>
        <td><%= liquidacion.fecha_fin %></td>
        <td><%= liquidacion.cargo %></td>
        <td><%= liquidacion.contrato %></td>
        <td><%= liquidacion.termina %></td>
        <td><%= liquidacion.salario %></td>
        <td><%= liquidacion.sueldo_promedio %></td>
        <td><%= liquidacion.vacaciones %></td>
        <td><%= liquidacion.indemniza_art65 %></td>
        <td><%= liquidacion.indemniza_art64 %></td>
        <td><%= liquidacion.cesantias %></td>
        <td><%= liquidacion.inte_cesantias %></td>
        <td><%= liquidacion.prima %></td>
        <td><%= liquidacion.total_prestaciones %></td>
        <td><%= liquidacion.total%></td>        
        <td><%= liquidacion.nombres %></td>
        <td><%= liquidacion.correo %></td>
        <td><%= liquidacion.created_at%></td>

          <td><%= link_to 'Mostrar', liquidacion , class: 'label label-info'%></td>
        <td><%= link_to 'Editar', edit_liquidacion_path(liquidacion) , class: 'label label-success'%></td>
        <td><%= button_to 'Eliminar', liquidacion, method: :delete,class: 'button', :onclick => "return confirm('¿Esta seguro de eliminar este registro?')" %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

